@{
  ViewData["Title"] = "Home Page";
}

<h1>All Destinations:</h1>

<ol>
  @foreach (Destination destination in Model)
  {
    <ul>
      <li>ID: @destination.DestinationId</li>
      <li>Country Name: @destination.CountryName</li>
      <li>City Name: @destination.CityName</li>
      <li>Review: @destination.Review</li>
      <li>Rate Review: @destination.RateReview</li>
    </ul>
    <a href="/Destinations/Details/@(destination.DestinationId)">
      <p>View Details</p>
    </a>
    <br>
  }
</ol>